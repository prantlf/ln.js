{
  "name": "@unixcompat/ln.js",
  "description": "Makes hard or symbolic links (symlinks) between files or directories like the \"ln\" command.",
  "version": "2.0.0",
  "homepage": "https://github.com/prantlf/ln.js#readme",
  "author": {
    "name": "Ferdinand Prantl",
    "email": "prantlf@gmail.com",
    "url": "http://prantl.tk"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/prantlf/ln.js.git"
  },
  "bugs": {
    "url": "https://github.com/prantlf/ln.js/issues"
  },
  "license": "MIT",
  "licenses": [
    {
      "type": "MIT",
      "url": "https://github.com/prantlf/ln.js/blob/master/LICENSE"
    }
  ],
  "engines": {
    "node": ">=16.15"
  },
  "type": "module",
  "bin": {
    "ln.js": "bin/ln-j"
  },
  "files": [
    "bin"
  ],
  "scripts": {
    "lint": "denolint",
    "check": "test/run",
    "test": "denolint && test/run"
  },
  "c8": {
    "check-coverage": true,
    "reporter": [
      "text",
      "lcov"
    ],
    "branches": 100,
    "lines": 100,
    "functions": 100,
    "statements": 100
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      [
        "@semantic-release/github",
        {
          "failComment": false
        }
      ],
      "@semantic-release/git"
    ]
  },
  "dependencies": {
    "fast-glob": "3.2.12"
  },
  "devDependencies": {
    "@semantic-release/changelog": "6.0.2",
    "@semantic-release/git": "10.0.1",
    "c8": "7.13.0",
    "denolint": "2.0.7"
  },
  "keywords": [
    "fs",
    "file-system",
    "filesystem",
    "file",
    "directory",
    "link",
    "symbolic",
    "hard",
    "symlink",
    "symbolic-link",
    "hardlink",
    "ln"
  ]
}
